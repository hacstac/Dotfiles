set shell zsh
set shellopts '-euy'
set ifs "\n"
set filesep "\n" 
map <enter> shell
set drawbox
map a push %mkdir<space>

# No of columns
%{{
    w=$(tput cols)
    if [ $w -le 80 ]; then
        lf -remote "send $id set ratios 1:2"
    elif [ $w -le 160 ]; then
        lf -remote "send $id set ratios 1:2:3"
    else
        lf -remote "send $id set ratios 1:2:3:5"
    fi
}}


